<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/categoryMainListFragment">

    <fragment
        android:id="@+id/categoryMainListFragment"
        android:name="com.ecoist.market.presentation.category.main.CategoryMainListFragment"
        android:label="CategoryListFragment">
        <action
            android:id="@+id/action_categoryListFragment_to_categoryCommonListFragment"
            app:destination="@id/categoryCommonListFragment" />
    </fragment>
    <fragment
        android:id="@+id/categoryCommonListFragment"
        android:name="com.ecoist.market.presentation.category.common.CategoryCommonListFragment"
        android:label="CategoryCommonListFragment">
        <action
            android:id="@+id/action_categoryFragment_to_productFragment2"
            app:destination="@id/productFragment" />
        <argument
            android:name="category"
            android:defaultValue="@null"
            app:argType="com.ecoist.market.data.model.Category"
            app:nullable="true" />
        <argument
            android:name="categoryId"
            app:argType="long" />
    </fragment>
    <fragment
        android:id="@+id/productFragment"
        android:name="com.ecoist.market.presentation.product.ProductFragment"
        android:label="ProductFragment" >
        <argument android:name="productId"
            app:argType="long" />
        <argument
            android:name="product"
            app:argType="com.ecoist.market.data.model.Product"
            app:nullable="true"
            android:defaultValue="@null" />
    </fragment>
    <fragment
        android:id="@+id/splashFragment"
        android:name="com.ecoist.market.presentation.splash.SplashFragment"
        android:label="SplashFragment" >
        <action
            android:id="@+id/action_splashFragment_to_categoryListFragment"
            app:destination="@id/categoryMainListFragment" />
        <action
            android:id="@+id/action_splashFragment_to_categoryFragment"
            app:destination="@id/categoryCommonListFragment" />
        <action
            android:id="@+id/action_splashFragment_to_productFragment"
            app:destination="@id/productFragment" />
    </fragment>
</navigation>